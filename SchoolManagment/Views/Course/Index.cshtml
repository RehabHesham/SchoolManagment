@{
}

@model List<Course>

    <a href="/course/add">Add new course</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col"></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var crs in Model)
        {
            <tr>
                <th scope="row">@crs.Id</th>
                <td>@crs.Name</td>
                <td>@crs.Description</td>
                <td><a href="/course/edit/@crs.Id">Edit</a></td>
                <td><a href="/course/details/@crs.Id"><i class="fa-solid fa-light fa-circle-info"></i></a></td>
                <td><a href="/course/delete/@crs.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
